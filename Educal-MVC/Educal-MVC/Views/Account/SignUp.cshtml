@model RegisterVM
@{
    ViewData["Title"] = "SignUp";
}

<section id="register">
    <div class="container mt-5">
        <h1 class="text-center">Sign up</h1>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="register-form" style="width:50%;margin:0 auto;background-color:yellowgreen;padding:30px;margin-bottom:14%;box-shadow: rgba(0, 0, 0, 0.25) 0px 54px 55px, rgba(0, 0, 0, 0.12) 0px -12px 30px, rgba(0, 0, 0, 0.12) 0px 4px 6px, rgba(0, 0, 0, 0.17) 0px 12px 13px, rgba(0, 0, 0, 0.09) 0px -3px 5px; padding-bottom:40px;border-radius:20px;margin-top:23px">
            <form method="post" asp-action="SignUp">

                <div class="form-group" style="color:white">
                    <label>Email address</label>
                    <input asp-for="Email" type="text" class="form-control">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>

                <div class="form-group" style="color:white">
                    <label>Username</label>
                    <input asp-for="Username" class="form-control">
                    <span class="text-danger" asp-validation-for="Username"></span>
                </div>

                <div class="form-group" style="color:white">
                    <label>Full name</label>
                    <input asp-for="FullName" class="form-control">
                    <span class="text-danger" asp-validation-for="FullName"></span>
                </div>

                <div class="form-group" style="color:white">
                    <label>Password</label>
                    <input asp-for="Password" class="form-control">
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>

                <div class="form-group" style="color:white">
                    <label>Confirm password</label>
                    <input asp-for="ConfirmPassword" class="form-control">
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                </div>
                <div class="register-btn mt-3 d-flex justify-content-center">
                    <button type="submit" class="btn btn-outline-primary text-white">Sign up</button>
                   
                </div>
                <a asp-action="SignIn">Go to Sign In</a>
            </form>
        </div>
    </div>
</section>



