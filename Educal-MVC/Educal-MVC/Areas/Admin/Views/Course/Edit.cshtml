@model CourseEditVM

@{
    ViewData["Title"] = "Edit";
}

<section id="edit-area">
    <div class="card">
        <div class="card-body">
            <div class="row mt-3">
                @foreach (var item in Model.Images)
                {
                    <div class="col-3 pr-1 position-relative @(item.IsMain ? "hide-btn" : "show-btn")">
                        <img src="~/assets/images/@item.Name"
                             class="mb-2 mw-100 w-100 rounded @(item.IsMain ? "image-main" : "")"
                             alt="image"
                             style=" height:200px;" />
                        <div class="operations ">
                            <button class="btn btn-info btn-sm set-main position-absolute "
                                    data-id="@item.Id"
                                    data-courseId="@item.CourseId"
                                    title="Set as main image"
                                    style="left:41%;top:20%;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-photo"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M15 8h.01" /><path d="M3 6a3 3 0 0 1 3 -3h12a3 3 0 0 1 3 3v12a3 3 0 0 1 -3 3h-12a3 3 0 0 1 -3 -3v-12z" /><path d="M3 16l5 -5c.928 -.893 2.072 -.893 3 0l5 5" /><path d="M14 14l1 -1c.928 -.893 2.072 -.893 3 0l3 3" /></svg>
                            </button>
                            <button class="btn btn-danger btn-sm img-delete position-absolute"
                                    data-id="@item.Id"
                                    data-courseId="@item.CourseId"
                                    title="Delete image"
                                    style="left:41%;top:55%;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-trash"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M4 7l16 0" /><path d="M10 11l0 6" /><path d="M14 11l0 6" /><path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" /><path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" /></svg>
                            </button>
                        </div>
                    </div>
                }
                <form class="forms-sample mt-5" method="post" asp-action="Edit" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="images">Upload Images</label>
                        <input asp-for="NewImages" accept="image/*" class="form-control" id="images">
                        <span asp-validation-for="NewImages" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input asp-for="Name" class="form-control" id="name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <input asp-for="Description" class="form-control" id="description">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="price">Price</label>
                        <input asp-for="Price" type="number" step="any" class="form-control" id="price">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="price">Discount Price</label>
                        <input asp-for="DiscountPrice" type="number" step="any" class="form-control" id="price">
                        <span asp-validation-for="DiscountPrice" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 col-form-label">Category</label>
                        <select asp-for="CategoryId" asp-items="@ViewBag.categories" class="form-control"></select>
                    </div>
                    <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
                    <a class="btn btn-light" asp-action="Index">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</section>

@section js
{
    <script src="~/admin/assets/js/course.js"></script>
}


