@model CourseCreateVM
@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <form class="forms-sample" method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="form-group">
            <label for="inputCategoryName"> Name</label>
            <input asp-for="Name" class="form-control" id="inputCategoryName">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="inputCategoryName">Description</label>
            <input asp-for="Description" class="form-control" id="inputCategoryName">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="inputCategoryName">Price</label>
            <input asp-for="Price" type="number" class="form-control" step="any" min="0" id="inputCategoryName">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="inputCategoryName">Category</label>
            <select asp-for="CategoryId" asp-items="@ViewBag.categories" class="form-control"> </select>
        </div>
        <div class="form-group">
            <label for="inputCategoryName"> Images</label>
            <input asp-for="Images" accept="image/*" class="form-control">
            <span asp-validation-for="Images" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
        <a class="btn btn-light" asp-action="Index">Cancel</a>
    </form>
</div>

